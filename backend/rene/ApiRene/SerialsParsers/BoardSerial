from . import BoardConst


def set_category(serial):
    prem = "premium"
    wc = "world cup"
    sport = "sport"
    if serial[:BoardConst.year_last_index].lower() in BoardConst.premium_set:
        return prem
    elif serial[:BoardConst.year_last_index].lower() in BoardConst.wc_set:
        return wc
    else:
        return sport

def set_type(serial):
    return BoardConst.types_map[str(serial[:BoardConst.year_last_index]).lower()]


def set_model(serial):
    return BoardConst.models_map[str(serial[:BoardConst.year_last_index]).lower()]


def set_year(serial):
    if BoardConst.year_index == int(serial[BoardConst.year_last_index]):
        return 2019
    else:
        return 2020


def set_volume(serial):
    try:
        size_list = BoardConst.model_to_dict[serial[: BoardConst.year_last_index + 1].lower()]
        volume = int(size_list[int(serial[BoardConst.volume_index])])
        return volume

    except:
        size_list = BoardConst.model_to_dict[serial[:BoardConst.year_last_index].lower()]
        volume = int(size_list[int(serial[BoardConst.volume_index])])
        return volume


def check_number(serial):
    if (
        serial[:BoardConst.year_last_index].lower() in BoardConst.models_map.keys()
        and int(serial[BoardConst.year_last_index]) in {2, 9}
        and int(serial[BoardConst.volume_index])
        in range(
            0, len(BoardConst.model_to_dict[serial[:BoardConst.year_last_index].lower()])
        )
    ):
        return True
    else:
        return False
